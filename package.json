    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "server": "node server.js",
    "db:init": "node seed-db.js"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
