{
  "name": "mleczna-droga-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "frontend": "vite --host --port 5173 --strictPort",
    "backend": "cross-env PORT=3000 node server.js",
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"yellow,blue\" \"npm run backend\" \"npm run frontend\"",
    "build": "tsc && vite build",
