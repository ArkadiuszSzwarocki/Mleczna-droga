    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.344.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.7",
    "pdf-parse": "^1.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.0.0",
    "recharts": "^2.12.2"
  },
  "devDependencies": {
    "@playwright/test": "latest",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@types/node": "latest",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "jsdom": "latest",
